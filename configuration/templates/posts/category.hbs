<div class="container-content thirdforcenews-page t-padding container-centred">
  <div class="b-padding-full b-margin-full category-{{replace @root.request.params.path "-and-" "-"}}">
    {{#compare @root.data.primaryResponse.hits.total ">" 0 ~}}
    <h1 class="mdc-typography--headline3">
      {{{getProperty @root.context.metaData.categories (concat (replace @root.request.params.path "-and-" "-") '.label')}}}
    </h1>
    {{#each @root.data.primaryResponse.hits.hits ~}}
    {{#with _source ~}}
    <div class="mdc-card mdc-elevation--z3 h-padding-full b-padding-full b-margin-full">
      <h2 class="mdc-typography--headline6">
        {{{title}}}
      </h2>
      <div class="mdc-typography--body1">
        {{{description}}}
        <a href="{{url}}">Read more</a>
      </div>
    </div>
    {{/with ~}}
    {{/each ~}}
    {{> pagination paging=@root.data.primaryResponse.pagination}}

    {{else}}
    <h2 class="mdc-typography--headline5">
      Error 404: Category posts not found
    </h2>
    {{/compare ~}}
  </div>
</div>