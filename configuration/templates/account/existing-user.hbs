{{#json}}
  {{#with (getProperty @root.data.profiles @root.data.currentSite.name)}}
    {{#json key="current"}}
      {{#with (getProperty @root.context.metaData.site-configurations @root.data.currentSite.name)}}
        {{{json key="accessed" value=../accessed}}},
        {{{json key="name" value=name}}},
        {{{json key="title" value=title}}},
        {{{json key="url" value=url}}}
      {{/with}}
    {{/json}},
  {{/with}}
  {{#json key="profiles" type="array"}}
    {{#each @root.data.profiles}}
      {{#ifAny accessed notes hidden}}
        {{#with (getProperty @root.context.metaData.site-configurations @key)}}
          {{#json}}
            {{{json key="accessed" value=../accessed}}},
            {{{json key="name" value=name}}},
            {{{json key="title" value=title}}},
            {{{json key="url" value=url}}}
          {{/json}},
        {{/with}}
      {{/ifAny}}
    {{/each}}
  {{/json}}
{{/json}}